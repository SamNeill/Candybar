# Handle line endings automatically for files detected as text
* text=auto

# Java sources
*.java text diff=java
*.kt text diff=kotlin
*.groovy text diff=java
*.gradle text diff=java

# Android
*.xml text
*.properties text
*.json text
*.md text
*.txt text

# Gradle wrapper
gradlew text eol=lf
*.bat text eol=crlf

# Images & Resources
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.ttf binary
*.otf binary
*.webp binary

# Branch specific settings
refs/heads/sample merge=ours
refs/heads/sample rebase=no

# Prevent merging and rebasing between branches
refs/remotes/origin/sample merge=no
refs/remotes/origin/sample rebase=no

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore

library/** merge=ours
extLibs/** merge=ours
app/build/** merge=ours
app/release/** merge=ours
app/debug/** merge=ours 